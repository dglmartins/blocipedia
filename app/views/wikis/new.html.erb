<h1>New Wiki</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, class: 'form-control', placeholder: 'Enter wiki title' %>
     </div>
     <div class="form-group">
       <%= f.label :body %>
       <%= f.text_area :body, rows: 20, class: 'form-control', placeholder: 'Enter wiki body' %>
     </div>
     <div class="form-group">
       <%= f.label :private, class: 'checkbox' do %>
        Private <%= f.check_box :private,  :style => "margin-left: 10px;"  %>
       <% end %>
     </div>
     <div class="form-group">
       <%= f.submit "Save" %>
     </div>
    <% end %>
  </div>

</div>
